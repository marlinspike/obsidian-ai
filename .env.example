# Obsidian AI Configuration
# Docker compose configuration (repo root)
# Copy this file to .env and fill in your values

# API Authentication (required)
API_KEY=your-secure-api-key-here

# Notes mount source for Docker (required) - absolute host path to your Obsidian vault
NOTES_HOST_PATH=/path/to/your/obsidian/vault

# Container ports (optional, used by docker-compose)
BACKEND_PORT=8050
FRONTEND_PORT=5274

# LLM Providers (configure at least one)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Azure OpenAI (optional)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=

# OpenRouter (optional)
OPENROUTER_API_KEY=

# Model Routing Configuration
# Simple queries use a cheaper/faster model
SIMPLE_QUERY_PROVIDER=openai
SIMPLE_QUERY_MODEL=gpt-4o-mini

# Complex queries use a more capable model
COMPLEX_QUERY_PROVIDER=anthropic
COMPLEX_QUERY_MODEL=claude-3-5-sonnet-20241022

# Embeddings
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
